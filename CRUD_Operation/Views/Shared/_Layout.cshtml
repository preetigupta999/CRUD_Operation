<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/Site.css")
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>

<body>
    <!--Header-->
    <header class="page-header">
        <div class="navbar navbar-inverse navbar-fixed-top" style="background-color: brown">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    @Html.ActionLink("CRUD Operations", "Index", "Home", new { area = "" }, new { @class = "navbar-brand", Style = "background-color: white; color:brown; font-family: Times new roman; font-size: 20px;" })
                </div>
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("Home", "Index", "Home", new { @class = "linkhover", Style = "color:white; font-family: Times new roman; font-size: 16px;" })</li>
                        <li>@Html.ActionLink("Student Registration", "Create", "Home", new { @class = "linkhover", Style = "color:white; font-family: Times new roman; font-size: 16px;" })</li>
                        <li>@Html.ActionLink("All Registered Student", "Read", "Home", new { @class = "linkhover", Style = "color:white; font-family: Times new roman; font-size: 16px;" })</li>
                    </ul>
                </div>
            </div>
        </div>
    </header>

    <div class="container body-content">
        @RenderBody()
    </div>

    <!-- Footer -->
    <div class="footer">
        <footer class="page-footer font-small blue">
            <!-- Copyright -->
            <div class="footer-copyright text-center py-3">
                <p style="color: white; font-size: 20px; font-family: 'Times New Roman'; text-align: center;">
                    &copy; @DateTime.Now.Year - CRUD Operations || Preeti Gupta
                </p>
            </div>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>